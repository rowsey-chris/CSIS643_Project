<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.csis643_rowsey_project.controller.UpdateLeadFormController"
          hgap="10" vgap="10">

    <Label text="Lead First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="leadFirstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Lead Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="leadLastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Lead Contact Info:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="leadContactInfoField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Lead Status:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="leadStatusField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Lead Source:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="leadSourceField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Lead Notes:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="leadNotesField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <!-- Update Button -->
    <Button text="Update Lead" onAction="#updateLead" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>

</GridPane>
